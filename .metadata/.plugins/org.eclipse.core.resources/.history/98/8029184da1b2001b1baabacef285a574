		<a href="/sumbab/login/login"><input type="button" id="button3" value="로그인" />&nbsp;</a>
		<a href="/sumbab/memberjoin"><input type="button" id="button4" value="회원가입" />&nbsp;</a>
		<input type="button" id="button5" onclick="Mypage_check();" value="마이페이지" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
