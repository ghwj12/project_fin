package com.sumbab.sumbab.controller;

import javax.servlet.http.HttpSession;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.servlet.ModelAndView;

import com.sumbab.sumbab.model.login.MemberVo;
import com.sumbab.sumbab.model.login.loginService;

@Controller
public class LoginController {
	
	@Autowired 
	loginService myloginService;
	
	@RequestMapping(value = "/login/login")
	public ModelAndView loginCheck(@ModelAttribute MemberVo vo, HttpSession session) {
		boolean result = myloginService.loginCheck(vo, session);
		ModelAndView mav = new ModelAndView();
		if (result == true) {
			mav.setViewName("main");
		}else {
			mav.setViewName("login/login");
		}
		return mav;
	}
	
	@RequestMapping(value = "")
	public ModelAndView logout(HttpSession session) {
		myloginService.logout(session);
		ModelAndView mav = new ModelAndView();
		mav.setViewName("main");
		return mav;
	}

}
